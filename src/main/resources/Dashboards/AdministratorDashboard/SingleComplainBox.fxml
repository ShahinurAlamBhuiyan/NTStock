<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="complainBox" alignment="CENTER" prefHeight="110.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Dashboards.AdministratorDashboard.SingleComplainBoxController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="800.0">
         <children>
            <Label prefHeight="28.0" prefWidth="236.0" text="Retailer/Dealer Name: ">
               <font>
                  <Font name="Arial Bold" size="21.0" />
               </font>
            </Label>
            <TextField fx:id="retailerNameTF" disable="true" />
            <HBox prefHeight="30.0" prefWidth="375.0" />
            <Button mnemonicParsing="false" onAction="#handleDeleteBtn" prefWidth="18.0" text="X" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="800.0">
         <children>
            <Label prefHeight="28.0" prefWidth="238.0" text="Complaint's Contact: ">
               <font>
                  <Font name="Arial Bold" size="21.0" />
               </font>
            </Label>
            <TextField fx:id="ComplaintContactTF" disable="true" prefHeight="26.0" prefWidth="193.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="49.0" prefWidth="800.0">
         <children>
            <Label prefHeight="28.0" prefWidth="235.0" text="Complain Description: ">
               <font>
                  <Font name="Arial Bold" size="21.0" />
               </font>
            </Label>
            <TextField fx:id="DescriptionTF" disable="true" prefHeight="42.0" prefWidth="537.0" />
         </children>
      </HBox>
   </children>
</VBox>
